@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider
    FullWidth="false"
    MaxWidth="MaxWidth.Large"
    CloseButton="true"
    DisableBackdropClick="true"
    NoHeader="false"
    Position="DialogPosition.Center"
    CloseOnEscapeKey="true"
/>
<MudSnackbarProvider/>

<MudLayout Style="@($"height: 100%")">
        <MudMainContent>
            <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
                @Body
            </MudContainer>
        </MudMainContent>
</MudLayout>